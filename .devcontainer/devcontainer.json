{
  "name": "TechBookStore Dev Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "8",
      "jdkDistro": "ms"
    },
    "ghcr.io/devcontainers-extra/features/maven-sdkman:2": {
      "version": "3.6.3"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": false
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "vscjava.migrate-java-to-azure",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-spring-boot-dashboard",
        "vscjava.vscode-maven",
        "ms-azuretools.vscode-azurefunctions",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "ms-vscode.azurecli"
      ],
      "settings": {
        "java.home": "/usr/local/sdkman/candidates/java/8.0.462-tem",
        "maven.executable.path": "/usr/bin/mvn",
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-1.8",
            "path": "/usr/local/sdkman/candidates/java/8.0.462-tem",
            "default": true
          }
        ]
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",

  "remoteUser": "vscode",

  "mounts": [
    "source=${localEnv:HOME}/.m2,target=/home/vscode/.m2,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gradle,target=/home/vscode/.gradle,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.azure,target=/home/vscode/.azure,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "JAVA_HOME": "/usr/local/sdkman/candidates/java/8.0.462-tem",
    "MAVEN_OPTS": "-Xmx1024m",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
}
